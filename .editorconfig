root = true

[*]
end_of_line = lf
insert_final_newline = true

[*.{js,py}]
charset = utf-8
insert_final_newline = true

[*.py]
indent_style = space
indent_size = 4

[*.js]
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.json]
indent_style = tab
indent_size = 4
